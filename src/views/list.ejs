<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>List Employ</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>


<h2>List Employ</h2>
<button type="button" class="btn btn-primary" style="color: white !important">
    <a href="/create" style="color: white !important">ADD</a>
</button>
<br/>
<br/>

<table class="table">
    <thead>
    <tr style="text-align: center">
        <th scope="col">ma</th>
        <th scope="col">ten</th>
        <th scope="col">tuoi</th>
        <th scope="col">luong</th>
        <th scope="col">phongban</th>
        <th scope="col" cosplan="2">action</th>
    </tr>
    </thead>
    <tbody>
    <% for(const employ of employs) { %>
        <tr style="text-align: center">
            <td><%= employ.ma %></td>
            <td>
                <a href=/detail/<%= employ.id %> >
                    <%= employ.ten %></a>
            </td>
            <td><%= employ.tuoi %></td>
            <td><%= employ.luong %></td>
            <td> <%= employ.phongban.ten %></td>
            <td>
                <button type="button" class="btn btn-primary">
                    <a href="/update/<%= employ.id %>" style="color:#fff;margin:10px"> Update</a>
                </button>
                <button type="button" class="btn btn-danger">
                    <a href="/delete/<%= employ.id %>" style="color:#fff;margin:10px" onclick="return confirm('Are you sure')"> Delete </a>
                </button>
            </td>
        </tr>
    <% } %>

    </tbody>
</table>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>


</body>
</html>
