<form action="/update" method="POST">

    <label>ma</label>
    <input type="text" class="form-control" id="name" name="code" value="<%= employ.ma %>">

    <label>ten</label>
    <input type="text" class="form-control" id="author" name="name" value="<%= employ.ten %>">

    <label>tuoi</label>
    <input type="text" class="form-control" id="keyword" name="age" value="<%= employ.tuoi %>">

    <label>luong</label>
    <input type="text" class="form-control" id="category" name="price" value="<%= employ.luong %>">

    <label>phong ban</label>
    <input type="text" class="form-control" id="publisher" name="phongban" value="<%= employ.phongban.ten %>">

    <input type="text" hidden class="form-control" id="name" name="idUpdate" value="<%= employ._id %>">

    <br/>
    <button type="submit" class="btn btn-primary">Update</button>

</form>

